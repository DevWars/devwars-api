{
    "name": "devwars-api",
    "version": "0.2.2",
    "author": "DevWars, LLC",
    "license": "MIT",
    "description": "Official Node API for DevWars",
    "scripts": {
        "start": "cross-env NODE_ENV=production node ./dist/index.js",
        "dev": "ts-node-dev --transpile-only --respawn --no-notify ./app/index.ts",
        "test:nyc": "cross-env NODE_ENV=test nyc --reporter=html --reporter=text-summary mocha",
        "test": "cross-env NODE_ENV=test nyc --reporter=text-summary mocha",
        "test:break": "cross-env NODE_ENV=test mocha --inspect-brk",
        "build": "npm run clean && tsc",
        "clean": "rimraf dist",
        "docs:build": "apidoc -i ./app -o ./docs",
        "docs:production": "apidoc -i ./app -o ./dist/docs",
        "docs": "apidoc -i ./app -o ./docs & http-server -p 8081 docs",
        "seed": "node -r ts-node/register ./cli/Seeder.ts",
        "seed:password": "node -r ts-node/register ./cli/seed.passwords.ts",
        "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
        "lint:fix": "eslint . --fix --ext .js,.jsx,.ts,.tsx",
        "release": "standard-version"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm run lint && npm test"
        }
    },
    "nyc": {
        "include": [
            "app/**/*.ts"
        ],
        "extension": [
            ".ts",
            ".tsx"
        ],
        "exclude": [
            "**/*.d.ts"
        ],
        "reporter": [
            "html"
        ],
        "all": true
    },
    "dependencies": {
        "@hapi/joi": "^17.1.1",
        "aws-sdk": "^2.822.0",
        "axios": "^0.21.1",
        "bcrypt": "^5.0.0",
        "body-parser": "^1.18.2",
        "cookie-parser": "^1.4.5",
        "cors": "^2.8.4",
        "date-fns": "^2.16.1",
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "faker": "^5.1.0",
        "jsonwebtoken": "^8.2.0",
        "lodash": "^4.17.21",
        "mailgun-js": "^0.22.0",
        "mime": "^2.4.7",
        "mjml": "^4.8.1",
        "morgan": "^1.10.0",
        "multer": "^1.4.2",
        "nanoid": "^3.1.20",
        "pg": "^8.5.1",
        "qs": "^6.9.4",
        "superagent": "^6.1.0",
        "token-extractor": "^0.1.6",
        "typeorm": "^0.2.29",
        "winston": "^3.3.3"
    },
    "devDependencies": {
        "@babel/code-frame": "^7.12.11",
        "@types/bcrypt": "^3.0.0",
        "@types/chai": "^4.2.14",
        "@types/cookie-parser": "^1.4.2",
        "@types/cors": "^2.8.9",
        "@types/express": "^4.17.9",
        "@types/faker": "^5.1.5",
        "@types/hapi__joi": "^17.1.6",
        "@types/jsonwebtoken": "^8.5.0",
        "@types/lodash": "^4.14.167",
        "@types/mailgun-js": "^0.22.11",
        "@types/mjml": "^4.7.0",
        "@types/mocha": "^8.2.0",
        "@types/morgan": "^1.9.2",
        "@types/multer": "^1.4.5",
        "@types/node": "^14.14.20",
        "@types/qs": "^6.9.5",
        "@types/superagent": "^4.1.10",
        "@types/supertest": "^2.0.10",
        "@typescript-eslint/eslint-plugin": "^4.12.0",
        "@typescript-eslint/parser": "^4.12.0",
        "apidoc": "^0.25.0",
        "chai": "^4.2.0",
        "copyfiles": "^2.4.1",
        "cross-env": "^7.0.3",
        "eslint": "^7.17.0",
        "eslint-config-prettier": "^7.1.0",
        "http-server": "^0.12.3",
        "husky": "^4.3.6",
        "mocha": "^8.2.1",
        "nyc": "^15.1.0",
        "standard-version": "^9.1.0",
        "supertest": "^6.0.1",
        "ts-node": "9.1.1",
        "ts-node-dev": "^1.1.1",
        "typescript": "^4.1.3"
    }
}
