{
    "name": "devwars-api",
    "version": "0.0.0",
    "author": "DevWars, LLC",
    "license": "MIT",
    "description": "Official Node API for DevWars",
    "main": "server.js",
    "scripts": {
        "start": "npm run build && cd dist && cross-env NODE_ENV=production node ./app/index.js",
        "dev": "nodemon",
        "test:nyc": "cross-env NODE_ENV=test nyc --reporter=html mocha test/**/*.test.ts",
        "test": "cross-env NODE_ENV=test mocha test/**/*.test.ts",
        "test:break": "cross-env NODE_ENV=test mocha --inspect-brk test/**/*.test.ts",
        "build": "npm run clean && npm run copy && tsc --outDir dist",
        "copy": "copyfiles ./firebase.json ./.env ./package.json ./**/*.mjml dist/",
        "clean": "rimraf dist",
        "lint": "tslint app/**/*.ts config/**/*.ts test/**/*.ts",
        "serve-docs": "apidoc -i ./app -o ./docs && http-server docs",
        "seed": "node -r ts-node/register ./cli/Seeder.ts",
        "seed:password": "node -r ts-node/register ./cli/SeedPassword.ts",
        "seed:test": "cross-env NODE_ENV=test node -r ts-node/register ./cli/Seeder.ts",
        "typeorm": "ts-node -P ./tsconfig.json ./node_modules/.bin/typeorm",
        "migrate": "ts-node ./node_modules/.bin/typeorm migration:run"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm test"
        }
    },
    "nyc": {
        "include": [
            "app/**/*.ts"
        ],
        "extension": [
            ".ts",
            ".tsx"
        ],
        "exclude": [
            "**/*.d.ts"
        ],
        "reporter": [
            "html"
        ],
        "all": true
    },
    "dependencies": {
        "aws-sdk": "^2.538.0",
        "axios": "^0.18.1",
        "bcrypt": "^3.0.1",
        "body-parser": "^1.18.2",
        "cookie-parser": "^1.4.3",
        "cors": "^2.8.4",
        "date-fns": "^1.30.1",
        "dotenv": "^7.0.0",
        "express": "^4.17.1",
        "express-validator": "^5.3.1",
        "faker": "^4.1.0",
        "firebase-admin": "^6.5.0",
        "joi": "^7.3.0",
        "jsonwebtoken": "^8.2.0",
        "lodash": "^4.17.15",
        "mailgun-js": "^0.22.0",
        "mjml": "^4.5.1",
        "morgan": "^1.9.0",
        "multer": "^1.4.2",
        "pg": "^7.12.1",
        "qs": "^6.9.0",
        "superagent": "^3.8.2",
        "token-extractor": "^0.1.6",
        "ts-node": "8.4.0",
        "typeorm": "^0.2.19",
        "typescript": "^3.6.3",
        "winston": "^3.2.1"
    },
    "devDependencies": {
        "@hapi/joi": "^15.1.1",
        "@types/bcrypt": "^2.0.0",
        "@types/chai": "^4.2.3",
        "@types/cookie-parser": "^1.4.2",
        "@types/cors": "^2.8.6",
        "@types/dotenv": "^6.1.1",
        "@types/express": "^4.17.1",
        "@types/faker": "^4.1.5",
        "@types/joi": "^14.0.1",
        "@types/jsonwebtoken": "^7.2.6",
        "@types/lodash": "^4.14.141",
        "@types/mailgun-js": "^0.16.4",
        "@types/mjml": "^4.0.2",
        "@types/mocha": "^5.2.7",
        "@types/morgan": "^1.7.37",
        "@types/multer": "^1.3.10",
        "@types/node": "^12.7.8",
        "@types/qs": "^6.5.3",
        "@types/superagent": "^3.5.7",
        "@types/supertest": "^2.0.8",
        "@types/winston": "^2.4.4",
        "apidoc": "^0.17.6",
        "chai": "^4.2.0",
        "copyfiles": "^2.1.1",
        "cross-env": "^5.2.1",
        "http-server": "^0.11.1",
        "husky": "^1.3.1",
        "mocha": "^6.2.0",
        "nodemon": "^1.19.2",
        "nyc": "^14.1.1",
        "supertest": "^3.1.0",
        "tslint": "^5.20.0",
        "tslint-config-prettier": "^1.18.0"
    }
}
