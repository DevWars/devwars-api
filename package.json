{
    "name": "devwars-api",
    "version": "0.0.0",
    "author": "DevWars, LLC",
    "license": "MIT",
    "description": "Official Node API for DevWars",
    "main": "server.js",
    "scripts": {
        "start": "npm run build && npm run copy && cd dist && cross-env NODE_ENV=PRODUCTION node Index.js",
        "dev": "nodemon",
        "test": "cross-env NODE_ENV=test nyc --reporter=html mocha test/**/*.test.ts",
        "test:spe": "cross-env NODE_ENV=test mocha test/oauth.test.ts",
        "build": "npm run clean && tsc --outDir dist",
        "clean": "rimraf dist",
        "copy": "cp Index.ts dist/ && cp firebase.json dist/ && cp .env dist/",
        "lint": "tslint app/**/*.ts config/**/*.ts test/**/*.ts",
        "serve-docs": "apidoc -i ./app -o ./docs && http-server docs",
        "seed": "node -r ts-node/register ./cli/Seeder.ts",
        "seed:password": "node -r ts-node/register ./cli/SeedPassword.ts",
        "seed:test": "cross-env NODE_ENV=test node -r ts-node/register ./cli/Seeder.ts",
        "typeorm": "ts-node -P ./tsconfig.json ./node_modules/.bin/typeorm",
        "migrate": "ts-node ./node_modules/.bin/typeorm migration:run"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm test"
        }
    },
    "nyc": {
        "include": [
            "app/**/*.ts"
        ],
        "extension": [
            ".ts",
            ".tsx"
        ],
        "exclude": [
            "**/*.d.ts"
        ],
        "reporter": [
            "html"
        ],
        "all": true
    },
    "dependencies": {
        "aws-sdk": "^2.355.0",
        "axios": "^0.18.0",
        "bcrypt": "^3.0.1",
        "body-parser": "^1.18.2",
        "class-validator": "^0.8.5",
        "cookie-parser": "^1.4.3",
        "cors": "^2.8.4",
        "date-fns": "^1.30.1",
        "dotenv": "^7.0.0",
        "express": "^4.16.3",
        "express-validation": "^0.4.5",
        "express-validator": "^5.3.1",
        "faker": "^4.1.0",
        "firebase-admin": "^6.5.0",
        "joi": "^7.3.0",
        "jsonwebtoken": "^8.2.0",
        "lodash": "^4.17.11",
        "mailgun-js": "^0.22.0",
        "method-override": "^2.3.10",
        "mjml": "^4.4.0-beta.1",
        "morgan": "^1.9.0",
        "multer": "^1.4.1",
        "pg": "^7.9.0",
        "qs": "^6.7.0",
        "superagent": "^3.8.2",
        "token-extractor": "^0.1.6",
        "ts-node": "^7.0.0",
        "typeorm": "^0.2.8",
        "typescript": "^2.6.2"
    },
    "devDependencies": {
        "@hapi/joi": "^15.0.0",
        "@types/bcrypt": "^2.0.0",
        "@types/chai": "^4.1.2",
        "@types/cookie-parser": "^1.4.1",
        "@types/cors": "^2.8.4",
        "@types/dotenv": "^6.1.1",
        "@types/express": "^4.11.1",
        "@types/faker": "^4.1.5",
        "@types/joi": "^14.0.1",
        "@types/jsonwebtoken": "^7.2.6",
        "@types/lodash": "^4.14.116",
        "@types/mailgun-js": "^0.16.3",
        "@types/method-override": "0.0.31",
        "@types/mjml": "^4.0.2",
        "@types/mocha": "^5.2.4",
        "@types/morgan": "^1.7.35",
        "@types/multer": "^1.3.7",
        "@types/node": "^10.5.2",
        "@types/qs": "^6.5.3",
        "@types/superagent": "^3.5.7",
        "@types/supertest": "^2.0.4",
        "apidoc": "^0.17.6",
        "chai": "^4.1.2",
        "cross-env": "^5.1.4",
        "http-server": "^0.11.1",
        "husky": "^1.3.1",
        "mocha": "^5.0.4",
        "nodemon": "^1.17.2",
        "nyc": "^12.0.2",
        "supertest": "^3.1.0",
        "tslint": "^5.9.1",
        "tslint-config-prettier": "^1.18.0"
    }
}
