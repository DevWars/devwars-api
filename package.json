{
    "name": "devwars-api",
    "version": "0.2.0",
    "author": "DevWars, LLC",
    "license": "MIT",
    "description": "Official Node API for DevWars",
    "main": "server.js",
    "scripts": {
        "start": "cd dist && cross-env NODE_ENV=production node ./app/index.js",
        "dev": "ts-node-dev --respawn --transpileOnly --clear ./app/index.ts",
        "dev:break": "ts-node-dev --inspect --respawn ./app/index.ts",
        "test:nyc": "cross-env NODE_ENV=test nyc --reporter=html --reporter=text-summary mocha",
        "test": "cross-env NODE_ENV=test nyc --reporter=text-summary mocha",
        "test:break": "cross-env NODE_ENV=test mocha --inspect-brk",
        "build": "npm run clean && npm run docs:production & npm run copy & tsc --outDir dist",
        "copy": "copyfiles ./firebase.json ./.env ./package.json ./**/*.mjml dist/",
        "clean": "rimraf dist",
        "lint": "tslint **/*.ts --exclude 'node_modules/**'",
        "docs:build": "npx apidoc -i ./app -o ./docs",
        "docs:production": "npx apidoc -i ./app -o ./dist/docs",
        "docs": "npx apidoc -i ./app -o ./docs & http-server -p 8081 docs",
        "seed": "node -r ts-node/register ./cli/Seeder.ts",
        "seed:password": "node -r ts-node/register ./cli/SeedPassword.ts",
        "typeorm": "ts-node-dev -P ./tsconfig.json ./node_modules/.bin/typeorm",
        "migrate": "ts-node-dev ./node_modules/.bin/typeorm migration:run",
        "migrate:revert": "ts-node ./node_modules/.bin/typeorm migration:revert"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm run lint && npm test"
        }
    },
    "nyc": {
        "include": [
            "app/**/*.ts"
        ],
        "extension": [
            ".ts",
            ".tsx"
        ],
        "exclude": [
            "**/*.d.ts"
        ],
        "reporter": [
            "html"
        ],
        "all": true
    },
    "dependencies": {
        "@hapi/joi": "^17.1.1",
        "aws-sdk": "^2.647.0",
        "axios": "^0.19.2",
        "bcrypt": "^4.0.1",
        "body-parser": "^1.18.2",
        "cookie-parser": "^1.4.5",
        "cors": "^2.8.4",
        "date-fns": "^2.12.0",
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "faker": "^4.1.0",
        "firebase-admin": "^8.10.0",
        "jsonwebtoken": "^8.2.0",
        "lodash": "^4.17.15",
        "mailgun-js": "^0.22.0",
        "mjml": "^4.6.2",
        "morgan": "^1.10.0",
        "multer": "^1.4.2",
        "pg": "^8.0.2",
        "qs": "^6.9.3",
        "superagent": "^5.2.2",
        "token-extractor": "^0.1.6",
        "ts-node": "8.8.2",
        "typeorm": "^0.2.24",
        "typescript": "^3.8.3",
        "winston": "^3.2.1"
    },
    "devDependencies": {
        "@types/bcrypt": "^3.0.0",
        "@types/chai": "^4.2.11",
        "@types/cookie-parser": "^1.4.2",
        "@types/cors": "^2.8.6",
        "@types/dotenv": "^8.2.0",
        "@types/express": "^4.17.6",
        "@types/faker": "^4.1.10",
        "@types/hapi__joi": "^16.0.12",
        "@types/jsonwebtoken": "^8.3.8",
        "@types/lodash": "^4.14.149",
        "@types/mailgun-js": "^0.22.4",
        "@types/mjml": "^4.0.4",
        "@types/mocha": "^7.0.2",
        "@types/morgan": "^1.7.37",
        "@types/multer": "^1.4.2",
        "@types/node": "^13.11.1",
        "@types/qs": "^6.9.1",
        "@types/superagent": "^4.1.7",
        "@types/supertest": "^2.0.8",
        "@types/winston": "^2.4.4",
        "apidoc": "^0.20.1",
        "chai": "^4.2.0",
        "copyfiles": "^2.2.0",
        "cross-env": "^7.0.2",
        "http-server": "^0.12.1",
        "husky": "^4.2.5",
        "mocha": "^7.1.1",
        "nyc": "^15.0.1",
        "supertest": "^4.0.2",
        "ts-node-dev": "^1.0.0-pre.44",
        "tslint": "^5.20.1",
        "tslint-config-prettier": "^1.18.0",
        "tslint-eslint-rules": "^5.4.0"
    }
}
